<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Home</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />

        <link rel="stylesheet" href="/css/output.css" />
    </head>
    <body class="py-16">
        <div class="w-full max-w-xs lg:max-w-4xl xl:max-w-6xl mx-auto flex flex-col gap-y-6">
            <p class="text-center font-bold font-poppins text-4xl lg:text-[64px]">Daftar Makanan</p>
            <button data-modal-target="crud-modal" data-modal-toggle="crud-modal" class="mx-auto px-16 py-3 rounded-sm bg-primary-orange text-white font-poppins font-semibold text-[16px] hover:duration-300 hover:cursor-pointer hover:bg-white hover:text-primary-orange hover:ring-2 hover:ring-primary-orange mb-8" type="button">Tambah Makanan</button>
            <div class="grid lg:grid-cols-3 gap-y-6 lg:gap-x-8">
                {{#if foods.length}}
                    {{#each foods}}
                        <div class="flex flex-col ring-2 ring-primary-orange p-4 rounded-[20px] items-center justify-between">
                            <div class="flex flex-col items-center">
                                {{#if this.image}}
                                    <img src="{{this.image}}" alt="" class="rounded-[20px] mb-4">
                                {{else}}
                                    <img src="/images/nasi-goreng.png" alt="" class="rounded-[20px] mb-4">
                                {{/if}}
                                <p class="font-poppins font-semibold text-[20px] mb-1">{{this.name}}</p>
                                <p class="font-poppins font-light text-[13px] text-center tracking-wider mb-4">{{this.description}}</p>
                            </div>

                            <div class="flex flex-col items-center w-full">
                                <div class="flex flex-row gap-x-1 self-start mb-2">
                                    {{#each (range 1 5)}}
                                        {{#if (lte this ../rating)}}
                                            <img src="/images/star-fill.svg" alt="Filled Star">
                                        {{else}}
                                            <img src="/images/star-border.svg" alt="Empty Star">
                                        {{/if}}
                                    {{/each}}
                                </div>
                                <p class="font-poppins font-semibold text-[16px] self-start mb-4">Rp. {{this.price}},00</p>
                                <a href="#" class="font-poppins font-semibold text-[16px] w-full py-3 bg-primary-orange text-white rounded-sm hover:duration-300 hover:scale-105 text-center">Lihat Detail</a>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p class="text-center mx-auto text-red-500">Tidak ada data makanan</p>
                {{/if}}
            </div>
        </div>

        <!-- Main modal -->
        <div id="crud-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative p-4 w-full max-w-md lg:max-w-3xl max-h-full">
                <!-- Modal content -->
                <div class="relative bg-white rounded-lg shadow-sm">
                    <!-- Modal header -->
                    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t  border-gray-200">
                        <h3 class="text-lg font-poppins font-semibold text-black ">
                            Tambah Makanan
                        </h3>
                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-black rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center " data-modal-toggle="crud-modal">
                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                            </svg>
                            <span class="sr-only">Close modal</span>
                        </button>
                    </div>
                    <!-- Modal body -->
                    <form class="p-4" action="/foods" method="POST" enctype="multipart/form-data">
                        <div class="grid gap-4 mb-4 grid-cols-2">
                            <div class="col-span-2">
                                <label for="name" class="block mb-2 text-sm font-medium font-poppins text-black ">Nama Makanan</label>
                                <input type="text" name="name" id="name" class="bg-gray-50 border border-gray-300 text-black font-poppins text-sm rounded-lg block w-full p-2.5 focus:ring-2 focus:outline-none focus:ring-primary-orange focus:border-primary-orange" placeholder="Masukkan Nama Makanan" required="">
                            </div>
                            <div class="col-span-2 lg:col-span-1">
                                <label for="price" class="block mb-2 text-sm font-medium text-black font-poppins ">Harga Makanan</label>
                                <input type="number" name="price" id="price" class="bg-gray-50 border border-gray-300 text-black font-poppins text-sm rounded-lg block w-full p-2.5 focus:ring-2 focus:outline-none focus:ring-primary-orange focus:border-primary-orange" placeholder="15000" required="">
                            </div>
                            <div class="col-span-2 lg:col-span-1">
                                <label for="rating" class="block mb-2 text-sm font-medium text-black font-poppins">Rating Makanan</label>
                                <select id="rating" name="rating" class="bg-gray-50 border border-gray-300 text-black text-sm font-poppins rounded-lg focus:ring-primary-orange focus:border-primary-orange focus:outline-none block w-full p-2.5">
                                    <option selected="">Pilih Rating</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                            <div class="col-span-2">
                                <label class="block mb-2 text-sm font-medium text-black font-poppins" for="file_input">Upload Gambar Makanan</label>
                                <input class="block w-full text-sm text-black border border-gray-300 rounded-lg cursor-pointer bg-gray-50 font-poppins focus:outline-none" aria-describedby="file_input_help" name="image" id="file_input" type="file">
                                <p class="mt-1 text-sm text-black font-poppins" id="file_input_help">PNG, JPG or JPEG (Max 10 MB).</p>
                            </div>
                            <div class="col-span-2">
                                <label for="description" class="block mb-2 text-sm font-medium text-black font-poppins ">Deskripsi Makanan</label>
                                <textarea id="description" name="description" rows="4" class="block p-2.5 w-full text-sm text-black font-poppins  bg-gray-50 rounded-lg border border-gray-300 focus:ring-2 focus:outline-none focus:ring-primary-orange focus:border-primary-orange" placeholder="Nasi goreng dengan ayam dan telor" required=""></textarea>                    
                            </div>
                        </div>
                        <button type="submit" class="text-white inline-flex items-center bg-primary-orange hover:scale-105 hover:duration-300 focus:ring-2 focus:outline-none focus:ring-primary-orange font-medium font-poppins rounded-lg text-sm px-5 py-2.5 text-center hover:cursor-pointer">
                            <svg class="me-1 -ms-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
                            Add new product
                        </button>
                    </form>
                </div>
            </div>
        </div> 


    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    </body>
</html>